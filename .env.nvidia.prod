# NVIDIA LaunchPad Production Environment Configuration

# Platform Configuration
PLATFORM=nvidia
PLATFORM_SUPPORTS_GPU=true
ENVIRONMENT=production

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=WARNING
DEBUG=false

# Database Configuration
HANA_HOST=
HANA_PORT=443
HANA_USER=
HANA_PASSWORD=
HANA_ENCRYPT=true
HANA_SSL_VALIDATE_CERT=true

# Vector Store Configuration
DEFAULT_TABLE_NAME=EMBEDDINGS
DEFAULT_CONTENT_COLUMN=VEC_TEXT
DEFAULT_METADATA_COLUMN=VEC_META
DEFAULT_VECTOR_COLUMN=VEC_VECTOR
VECTOR_COLUMN_TYPE=REAL_VECTOR
VECTOR_COLUMN_LENGTH=-1

# GPU Configuration
GPU_ENABLED=true
GPU_DEVICE=auto
GPU_BATCH_SIZE=32
EMBEDDING_MODEL=all-MiniLM-L6-v2
USE_INTERNAL_EMBEDDINGS=false
INTERNAL_EMBEDDING_MODEL_ID=SAP_NEB.20240715

# TensorRT Configuration
USE_TENSORRT=true
TENSORRT_PRECISION=fp16
TENSORRT_CACHE_DIR=/tmp/tensorrt_engines
TENSORRT_DYNAMIC_SHAPES=true

# Feature Flags
ENABLE_ERROR_CONTEXT=true
ENABLE_PRECISE_SIMILARITY=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_ADVANCED_CLUSTERING=true
ENABLE_RATE_LIMITING=true
ENABLE_MOCK_MODE=false
ENABLE_CORS=true