# NVIDIA LaunchPad T4 GPU Production Environment Configuration

# Platform Configuration
PLATFORM=nvidia
PLATFORM_SUPPORTS_GPU=true
ENVIRONMENT=production
GPU_TYPE=T4

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=WARNING
DEBUG=false

# Database Configuration
HANA_HOST=${HANA_HOST}
HANA_PORT=${HANA_PORT}
HANA_USER=${HANA_USER}
HANA_PASSWORD=${HANA_PASSWORD}
HANA_ENCRYPT=true
HANA_SSL_VALIDATE_CERT=true

# Vector Store Configuration
DEFAULT_TABLE_NAME=EMBEDDINGS
DEFAULT_CONTENT_COLUMN=VEC_TEXT
DEFAULT_METADATA_COLUMN=VEC_META
DEFAULT_VECTOR_COLUMN=VEC_VECTOR
VECTOR_COLUMN_TYPE=REAL_VECTOR
VECTOR_COLUMN_LENGTH=-1

# GPU Configuration - Optimized for T4
GPU_ENABLED=true
GPU_DEVICE=0
GPU_BATCH_SIZE=24     # Smaller batch size for T4 compared to more powerful GPUs
GPU_MEMORY_THRESHOLD=15.0  # Keep more headroom for T4
EMBEDDING_MODEL=all-MiniLM-L6-v2  # Efficient model for T4
USE_INTERNAL_EMBEDDINGS=false
INTERNAL_EMBEDDING_MODEL_ID=SAP_NEB.20240715

# TensorRT Configuration - T4 Optimization
USE_TENSORRT=true
TENSORRT_PRECISION=fp16  # T4 has good FP16 performance
TENSORRT_CACHE_DIR=/tmp/tensorrt_engines
TENSORRT_DYNAMIC_SHAPES=true
TENSORRT_WORKSPACE_SIZE=1073741824  # 1GB (appropriate for T4)

# Feature Flags
ENABLE_ERROR_CONTEXT=true
ENABLE_PRECISE_SIMILARITY=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_ADVANCED_CLUSTERING=false  # Disable resource-intensive clustering on T4
ENABLE_RATE_LIMITING=true
ENABLE_MOCK_MODE=false
ENABLE_CORS=true

# Triton Server Configuration
TRITON_SERVER_URL=localhost:8000
USE_TRITON_INFERENCE=true
TRITON_MODEL_NAME=all-MiniLM-L6-v2
TRITON_TIMEOUT=60

# Performance Optimization for T4
CONCURRENT_REQUEST_LIMIT=8
ENABLE_MEMORY_OPTIMIZATION=true
USE_MIXED_PRECISION=true
EMBEDDING_DIMENSION=384  # Smaller dimension for efficiency