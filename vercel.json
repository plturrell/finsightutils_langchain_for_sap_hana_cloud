{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "maxDuration": 60,
        "installCommand": "pip install -r api/requirements-vercel.txt"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/docs",
      "dest": "api/index.py"
    },
    {
      "src": "/api/openapi.json",
      "dest": "api/index.py"
    },
    {
      "src": "/api/texts",
      "methods": ["POST"],
      "dest": "api/index.py"
    },
    {
      "src": "/api/query",
      "methods": ["POST"],
      "dest": "api/index.py"
    },
    {
      "src": "/api/query/vector",
      "methods": ["POST"],
      "dest": "api/index.py"
    },
    {
      "src": "/api/delete",
      "methods": ["POST"],
      "dest": "api/index.py"
    },
    {
      "src": "/api/benchmark/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/api/developer/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/api/debug/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/api/health",
      "dest": "api/index.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "API_HOST": "0.0.0.0",
    "API_PORT": "8000",
    "LOG_LEVEL": "INFO",
    "GPU_ENABLED": "false",
    "USE_INTERNAL_EMBEDDINGS": "false",
    "EMBEDDING_MODEL": "all-MiniLM-L6-v2",
    "REACT_APP_API_URL": "/api",
    "ENABLE_ERROR_CONTEXT": "true",
    "CACHE_VECTOR_REDUCTION": "true",
    "ENABLE_ADVANCED_CLUSTERING": "true"
  }
}